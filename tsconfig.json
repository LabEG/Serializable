{
    "compilerOptions": {
        "target": "ES5",
        "module": "UMD",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "ScriptHost"
        ],
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "pretty": true,
        "strict": true
    },
    "include": [
        "./node_modules/reflect-metadata/Reflect.d.ts",
        "./src/**/*",
        "./samples/**/*"
    ]
}
